//Napisac program wczytujacy tablice liczb rzeczywistych i drukujacy zestawienie, ile w niej jest liczb ujemnych, ile zer i ile liczb dodatnich.

      #include<stdio.h>
      main() {

      int i;
      int l;
      int ujemne;
      int zerowe;
      int dodatnie;

      dodatnie=0;
      ujemne=0;
      zerowe=0;
      zerowe=0;
      printf("podaj dlugosc tablicy: \n");
      scanf("%i", &l);
      float tab[l];

        for (i=0; i<l; i=i+1) {
        printf("tab[%i]=", i);
        scanf("%f", &tab[i]);
          if (tab[i]<0){
          ujemne=ujemne+1;
          } else if (tab[i]>0){
                 dodatnie=dodatnie+1;
                 } else zerowe=zerowe+1;
        }

      printf("ilosc%i dodatnich, %i ujemnych i %i zer\n", dodatnie, ujemne, zerowe);

      }


